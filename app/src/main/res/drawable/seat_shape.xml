<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when the seat is selected -->
    <item android:drawable="@drawable/seat_selected" android:state_selected="true"/>

    <!-- State when the seat is pressed -->
    <item android:drawable="@drawable/seat_pressed" android:state_pressed="true"/>

    <!-- State when the seat is default (unselected) -->
    <item android:drawable="@drawable/seat_default" />

</selector>
